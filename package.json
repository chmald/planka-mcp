  },
  "homepage": "https://github.com/chmald/planka-mcp#readme",
  "bugs": {
    "url": "https://github.com/chmald/planka-mcp/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "undici": "^7.19.2"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "cross-env": "^7.0.3",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3"
