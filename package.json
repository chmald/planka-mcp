{
  "name": "@chmald/planka-mcp",
  "version": "2.0.0-dev",
  "description": "MCP server for Planka - Real-Time Collaborative Kanban Board",
  "main": "dist/server.js",
  "type": "module",
  "bin": {
    "planka-mcp": "./dist/server.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:sse": "cross-env MCP_TRANSPORT=sse node dist/server.js",
    "dev": "tsx src/server.ts",
    "dev:sse": "cross-env MCP_TRANSPORT=sse tsx src/server.ts",
    "prepublishOnly": "npm run build",
    "test": "npm run build && node --import tsx --test test/*.test.ts",
    "test:tools": "node --import tsx --test test/tools.test.ts",
    "test:build": "npm run build && node --import tsx --test test/build.test.ts",
    "test:server": "node --import tsx --test test/server.test.ts",
    "test:ci": "npm run build && node --import tsx --test test/*.test.ts"
  },
  "keywords": [
    "mcp",
    "planka",
    "kanban",
    "model-context-protocol"
  ],
  "author": "Christopher Maldonado <chmald@microsoft.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chmald/planka-mcp.git"
  },
  "homepage": "https://github.com/chmald/planka-mcp#readme",
  "bugs": {
    "url": "https://github.com/chmald/planka-mcp/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "undici": "^7.19.2"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "cross-env": "^7.0.3",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3"
  }
}
