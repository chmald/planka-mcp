{
  "name": "planka-mcp",
  "version": "1.0.0",
  "description": "MCP server for Planka - Real-Time Collaborative Kanban Board",
  "main": "dist/server.js",
  "type": "module",
  "bin": {
    "planka-mcp": "./dist/server.js"
  },
  "files": [
    "dist",
    "swagger.json"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
